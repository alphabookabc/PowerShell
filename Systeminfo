$SysteminfoHtml = "C:\Scripts\SystemInfo\Systeminfo.Html"
$ComputerSystem = Get-CimInstance -ClassName Win32_ComputerSystem | Select-Object Name,Manufacturer,SystemFamily,Model
$BIOS = Get-CimInstance -ClassName Win32_BIOS | Select-Object Manufacturer,Version,SerialNumber
$CPU = Get-CimInstance -ClassName Win32_Processor `| Select-Object @{Name="Model";Expression={$_.Name}}, `@{Name="Cores";Expression={$_.NumberofCores}}, `@{Name="Processors";Expression={$_.NumberOfLogicalProcessors}}, `@{Name="L3Cache";Expression={(($_.L3CacheSize / 1024 -as [Int]).ToString() + " MB")}}
$Memory = Get-CimInstance -ClassName Win32_PhysicalMemory | Select-Object Manufacturer, `@{Name="Capacity";Expression={($_.Capacity / 1Gb -as [Int]).ToString() + " GB"}}, `@{Name="Speed";Expression={($_.Speed / 1000).ToString() + "GHz"}}
$HardDisk = Get-CimInstance -ClassName Win32_DiskDrive | Select-Object Manufacturer, Model, `@{Name="Size(GB)";Expression={($_.Size / 1Gb -as [Int]).ToString() + " GB"}}
$LogicalDisk = Get-CimInstance -ClassName Win32_LogicalDisk `| Select-Object @{Name="Disk";Expression={$_.DeviceID}}, `@{Name="Size(GB)";Expression={$_.Size / 1Gb -as [Int]}}, `@{Name="Free(GB)";Expression={$_.FreeSpace / 1Gb -as [Int]}}
$Css="<style>table{margin:8px; width:70%}Body{Text-align:Center;}th{background-color:black; color:white;}td{background-color:orange; color:Black; Text-align:Center;} </style>"
$ComputerSystem | ConvertTo-Html -Body $Css -PreContent "<h2>Computer System</h2>" | Out-File -FilePath $SysteminfoHtml$BIOS | ConvertTo-Html -Body $Css -PreContent "<br><h2>BIOS</h2>" | Out-File -FilePath $SysteminfoHtml -Append$CPU | ConvertTo-Html -Body $Css -PreContent "<br><h2>CPU</h2>" | Out-File -FilePath $SysteminfoHtml -Append$Memory | ConvertTo-Html -Body $Css -PreContent "<br><h2>Memory</h2>" | Out-File -FilePath $SysteminfoHtml -Append$HardDisk | ConvertTo-Html -Body $Css -PreContent "<br><h2>Hard Disk</h2>" | Out-File -FilePath $SysteminfoHtml -Append$LogicalDisk | ConvertTo-Html -Body $Css -PreContent "<br><h2>Logical Disk</h2>" | Out-File -FilePath $SysteminfoHtml -Append
