# To be contined

Function Check-UserExpire {

    Param (
        [Parameter(Mandatory=$True,ValueFromPipeline=$True,ValueFromPipelineByPropertyName=$True)][String]$Identity
    )

    $UserFirstDate = (Get-ADUser -Identity $Identity -Properties *).PasswordLastSet
    $UserLastDate = ($UserFirstDate.AddDays(90)).ToShortDateString
    $Today = (Get-Date).ToShortDateString
    If ($UserLastDate -eq $Today) {Write-host "Your password expired today."}

}
